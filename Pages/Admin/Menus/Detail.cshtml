@page
@model MyOrangeCMS_RazorVersion.Pages.Admin.Menus.DetailModel

@{
    Layout            = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "菜单详数据";
}



<div class="container">
    <div class="page-header">
        <div class="page-title">
            <h3>
                菜单详数据
            </h3>
            <span>
                <a asp-page="Index"> <<返回列表</a>
            </span>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4>
                        <i class="icon-reorder">
                        </i>
                        详细内容
                    </h4>
                    <div class="toolbar no-padding">
                    </div>
                </div>
                <div class="widget-content form-horizontal row-border">



                
                    <div class="form-group">
                        <label class="col-md-2 ">
                            @Html.DisplayNameFor(model => model.Menu.Name)
                        </label>
                        <div class="col-md-10">
                            <span class="text-default">
                                @Html.DisplayFor(model => model.Menu.Name)
                            </span>
                        </div>

                    </div>

 

                
                    <div class="form-group">
                        <label class="col-md-2 ">
                            @Html.DisplayNameFor(model => model.Menu.Cssclass)
                        </label>
                        <div class="col-md-10">
                            <span class="text-default">
                                @Html.DisplayFor(model => model.Menu.Cssclass)
                            </span>
                        </div>

                    </div>

 

                
                    <div class="form-group">
                        <label class="col-md-2 ">
                            @Html.DisplayNameFor(model => model.Menu.Linktext)
                        </label>
                        <div class="col-md-10">
                            <span class="text-default">
                                @Html.DisplayFor(model => model.Menu.Linktext)
                            </span>
                        </div>

                    </div>

 

                
                    <div class="form-group">
                        <label class="col-md-2 ">
                            @Html.DisplayNameFor(model => model.Menu.Parentid)
                        </label>
                        <div class="col-md-10">
                            <span class="text-default">
                                @Html.DisplayFor(model => model.Menu.Parentid)
                            </span>
                        </div>

                    </div>

 

                
                    <div class="form-group">
                        <label class="col-md-2 ">
                            @Html.DisplayNameFor(model => model.Menu.Sort)
                        </label>
                        <div class="col-md-10">
                            <span class="text-default">
                                @Html.DisplayFor(model => model.Menu.Sort)
                            </span>
                        </div>

                    </div>

 

                



                  
                    <div class="form-group">
                        <label class="col-md-2 ">
                            &nbsp;
                        </label>
                        <div class="col-md-2">
                            <a asp-page="./Edit" asp-route-id="@Model.Menu?.Id" class="btn btn-success">编辑</a> 
                             
                        </div>
                        <div class="col-md-8 text-center">
                            <a asp-page="./Delete" asp-route-id="@Model.Menu?.Id" class="btn btn-danger">删除</a> 

                        </div>

                    </div>

   
   




                </div>
            </div>
        </div>
    </div>
  
 

</div>