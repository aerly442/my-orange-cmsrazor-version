@page
@model MyOrangeCMS_RazorVersion.Pages.Admin.News_sources.EditModel

 
@{
    Layout = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "管理数据";
    ViewData["UserPower"] = Service.UserPower.GetList();
}


<div class="container">
    <div class="page-header">
        <div class="page-title">
            <h3>
                管理数据
            </h3>
            <span>
                <a asp-page="Index"> <<返回列表</a>
            </span>
        </div>

    </div>

    <form class="form-horizontal" role="role" method="post" accept-charset="utf-8">
        <div class="row">
            <div class="col-md-12 form-horizontal row-border">
                <div class="widget box">
                    <div class="widget-header">
                        <h4>
                            <i class="icon-reorder">
                            </i>
                            输入您的数据:
                        </h4>
                    </div>
                    <div class="widget-content">

                        <div class="alert alert-danger" id="divHidden" style="display: none;">
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                       
                        
                        <div class="form-group">
                            <label asp-for="News_source.Title" class="col-sm-2 control-label"></label>
                            <input asp-for="News_source.Title" class="form-control" style="width:30%;" />
                            
                        </div>
                        <div class="row div-error">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_source.Title" class="text-danger"></span>
                        </div>

                        
                        <div class="form-group">
                            <label asp-for="News_source.Note" class="col-sm-2 control-label"></label>
                            
                            <textarea type="text" rows="2" asp-for="News_source.Note" class="form-control" style="width:30%;">
                            </textarea>
                        </div>
                        <div class="row div-error">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_source.Note" class="text-danger"></span>
                        </div>

                        
                        <div class="form-group">
                            <label asp-for="News_source.Url" class="col-sm-2 control-label"></label>
                           

                            <div class="col-sm-5" style="padding-left: 0px;">                          
                                <input asp-for="News_source.Url" class="form-control" readonly />
                            </div>
                            <div class="col-sm-5">
                                <a href="javascript:void;" data-url="/Admin/Newss/Upload?id=News_source_Url" class="btn btn-warning btn-upload">上传图片</a>
                            </div>
                            
                        </div>
                        <div class="row div-error">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_source.Url" class="text-danger"></span>
                        </div>

                        
                        <div class="form-group">
                            <label asp-for="News_source.Type" class="col-sm-2 control-label"></label>
                            <input asp-for="News_source.Type" class="form-control" style="width:30%;" />
                            
                        </div>
                        <div class="row div-error">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_source.Type" class="text-danger"></span>
                        </div>

                 

                        




                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input type="submit" value="保 存" class="btn btn-success" />
                                <input asp-for="News_source.Id" type="hidden"  />
                                
                            </div>
                        </div>
















                    </div>
                </div>
            </div>
        </div>

    </form>



</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

