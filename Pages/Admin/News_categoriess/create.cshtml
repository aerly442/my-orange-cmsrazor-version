@page
@model MyOrangeCMS_RazorVersion.Pages.Admin.News_categoriess.CreateModel

@{
    Layout = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="page-header">
        <div class="page-title">
            <h3>
                Create数据
            </h3>
            <span>
                <a asp-page="Index"> <<返回列表</a>
            </span>
        </div>

    </div>

    <form class="form-horizontal" role="role" method="post" accept-charset="utf-8">
        <div class="row">
            <div class="col-md-12 form-horizontal row-border">
                <div class="widget box">
                    <div class="widget-header">
                        <h4>
                            <i class="icon-reorder">
                            </i>
                            输入您的数据:
                        </h4>
                    </div>
                    <div class="widget-content">

                         

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
                        
                        <div class="form-group">
                            <label asp-for="News_categories.Name" class="col-sm-2 control-label"></label>
                            <input asp-for="News_categories.Name" class="form-control" style="width:30%;" />
                            
                        </div>

                        
                        <div class="form-group">
                            <label asp-for="News_categories.Code" class="col-sm-2 control-label"></label>
                            <input asp-for="News_categories.Code" class="form-control" style="width:30%;" />
                            
                        </div>

                        
                        <div class="form-group">
                            <label asp-for="News_categories.Sort" class="col-sm-2 control-label"></label>
                            <input asp-for="News_categories.Sort" class="form-control" style="width:30%;" />
                            
                        </div>

                                       

                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input type="submit" value="保 存" class="btn btn-success" />
                            </div>
                        </div>

 

                    </div>
                </div>
            </div>
        </div>

    </form>


 
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 