@page
@model MyOrangeCMS_RazorVersion.Pages.Admin.Users.ResetPasswordModel

 
@{
    Layout = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "重置用户密码";
    //ViewData["UserPower"] = Service.UserPower.GetList();
    //ResetPasswordModel
}


<div class="container">
    <div class="page-header">
        <div class="page-title">
            <h3>
                重置用户密码
            </h3>
            <span>
                <a asp-page="Index"> <<返回列表</a>
            </span>
        </div>

    </div>

    <form class="form-horizontal" role="role" method="post" accept-charset="utf-8">
        <div class="row">
            <div class="col-md-12 form-horizontal row-border">
                <div class="widget box">
                    <div class="widget-header">
                        <h4>
                            <i class="icon-reorder">
                            </i>
                            输入您的数据:
                        </h4>
                    </div>
                    <div class="widget-content">

                         
                        @Html.Raw(Model.ErrorInfo)
                         

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
                       

                        <div class="form-group">
                            <label asp-for="User.Name" class="col-sm-2 control-label"></label>
                            <input asp-for="User.Name" class="form-control" style="width:10%;" readonly=true />
                        </div>
                        <div class="form-group">
                            <label asp-for="User.Nickname" class="col-sm-2 control-label"></label>
                            <input asp-for="User.Nickname" class="form-control" style="width:10%;" readonly=true />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="User.Nickname" class="text-danger"></span>
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="User.Name" class="text-danger" readonly=true ></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="User.Username" class="col-sm-2 control-label"></label>
                            <input asp-for="User.Username" class="form-control" readonly=true style="width:10%;" />
                        </div>
                        

                         

                        <div class="form-group">
                            <label  class="col-sm-2 control-label">新密码</label>
                            <input asp-for="User.Password" class="form-control" style="width:10%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                      
        
                       
                       
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input type="submit" value="保 存" class="btn btn-success" />
                                <input asp-for="User.Id" type="hidden"  />
                                
                       
                            </div>
                        </div>
















                    </div>
                </div>
            </div>
        </div>

    </form>



</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
