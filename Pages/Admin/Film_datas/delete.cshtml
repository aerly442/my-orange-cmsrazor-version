@page
@model MyOrangeCMS_RazorVersion.Pages.Admin.Film_datas.DeleteModel

@{
    Layout = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "删除数据";
}





<div class="container">
    <div class="page-header">
        <div class="page-title">
          
           

            <h3>您确定要删除吗?</h3>
           
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4>
                        <i class="icon-reorder">
                        </i>
                        详细内容
                    </h4>
                    <div class="toolbar no-padding">
                    </div>
                </div>
                <div class="widget-content form-horizontal row-border">


                
 

                    <div class="form-group">
                                            <label class="col-md-2 ">
                                                @Html.DisplayNameFor(model => model.Film_data.Title)
                                            </label>
                                            <div class="col-md-10">
                                                <span class="text-default">
                                                    @Html.DisplayFor(model => model.Film_data.Title)
                                                </span>
                                            </div>

                                        </div>

 
 

                    <div class="form-group">
                                            <label class="col-md-2 ">
                                                @Html.DisplayNameFor(model => model.Film_data.Content)
                                            </label>
                                            <div class="col-md-10">
                                                <span class="text-default">
                                                    @Html.DisplayFor(model => model.Film_data.Content)
                                                </span>
                                            </div>

                                        </div>

                    
 

                    <div class="form-group">
                                            <label class="col-md-2 ">
                                                @Html.DisplayNameFor(model => model.Film_data.Bt_file_url)
                                            </label>
                                            <div class="col-md-10">
                                                <span class="text-default">
                                                    @Html.DisplayFor(model => model.Film_data.Bt_file_url)
                                                </span>
                                            </div>

                                        </div>

                    
                    <div class="form-group">
                        <label class="col-md-2 ">
                            @Html.DisplayNameFor(model => model.Film_data.Createtime)
                        </label>
                        <div class="col-md-10">
                            <span class="text-default">
                                @Html.DisplayFor(model => model.Film_data.Createtime)
                            </span>
                        </div>

                    </div>
 

                    <div class="form-group">
                        <label class="col-md-2 ">
                            &nbsp;
                        </label>
                        <div class="col-md-2">
                            <form method="post">
                                <input type="hidden" asp-for="Film_data.Id" />
                                <input type="submit" value="删除" class="btn btn-danger" /> 
                            </form>
                        </div>
                        <div class="col-md-8 text-center">
                            <a asp-page="./Index" class="text-success">返回列表</a>

                        </div>

                    </div>

 




                </div>
            </div>
        </div>
    </div>



</div>