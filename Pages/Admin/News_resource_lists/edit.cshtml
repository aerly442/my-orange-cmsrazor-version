@model MyOrangeCMS_RazorVersion.Pages.Admin.News_resource_lists.EditModel


@{
    Layout = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "管理资源列表";
    ViewData["UserPower"] = Service.UserPower.GetList();
}


<div class="container">
    <div class="page-header">
        <div class="page-title">
            <h3>
                管理资源列表
            </h3>
            <span>
                <a asp-page="Index"> <<返回列表</a>
            </span>
        </div>

    </div>

    <form class="form-horizontal" role="role" method="post" accept-charset="utf-8">
        <div class="row">
            <div class="col-md-12 form-horizontal row-border">
                <div class="widget box">
                    <div class="widget-header">
                        <h4>
                            <i class="icon-reorder">
                            </i>
                            输入您的数据:
                        </h4>
                    </div>
                    <div class="widget-content">

                         @(Html.Raw(this.Model.ErrorInfo))

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>





                        <div class="form-group1">

                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="News_resource_list.Newsid" class=" control-label"></label>
                                    <input asp-for="News_resource_list.Newsid" class="form-control"  style="display: none;" />

                                </div>
                                <div class="col-sm-6">
                                    <input type="text" name="NewsTitle" id="NewsTitle" class="form-control"  />
                                </div>
                                <div class="col-sm-3"> <a href="javascript:window.open('select?type=1')" class="btn btn-info">选择</a></div>
                            </div>
                            
                            
                        </div>

                        <div class="row">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_resource_list.Newsid" class="text-danger"></span>
                        </div>


                        <div class="form-group1">
                            <div class="row">
                                <div class="col-sm-2">
                                    <label asp-for="News_resource_list.Newsresourceid" class=" control-label"></label>
                            <input asp-for="News_resource_list.Newsresourceid" class="form-control" style="display: none;" />
                                </div>
                                <div class="col-sm-6"> <input type="text" name="ResourceTitle" id="ResourceTitle" class="form-control"  /></div>
                                <div class="col-sm-3">
                                    <a href="javascript:window.open('select?type=2')" class="btn btn-info">选择</a>
                                </div>
                            </div>
                            
                           
                            
                        </div>


                        <div class="row">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_resource_list.Newsresourceid" class="text-danger"></span>
                        </div>






                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input type="submit" value="保 存" class="btn btn-success" />
                                <input asp-for="News_resource_list.Id" type="hidden" />

                            </div>
                        </div>
















                    </div>
                </div>
            </div>
        </div>

    </form>



</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

