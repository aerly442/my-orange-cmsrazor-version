@page
@model MyOrangeCMS_RazorVersion.Pages.Admin.News_comments.EditModel

 
@{
    Layout = "_LayoutAdmin"; //页面模板
    ViewData["Title"] = "管理用户信息";
    ViewData["UserPower"] = Service.UserPower.GetList();
}


<div class="container">
    <div class="page-header">
        <div class="page-title">
            <h3>
                管理信息
            </h3>
            <span>
                <a asp-page="Index"> <<返回列表</a>
            </span>
        </div>

    </div>

    <form class="form-horizontal" role="role" method="post" accept-charset="utf-8">
        <div class="row">
            <div class="col-md-12 form-horizontal row-border">
                <div class="widget box">
                    <div class="widget-header">
                        <h4>
                            <i class="icon-reorder">
                            </i>
                            输入您的数据:
                        </h4>
                    </div>
                    <div class="widget-content">

                        <div class="alert alert-danger" id="divHidden" style="display: none;">
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="News_comment.Newsid" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Newsid" class="form-control" style="width:30%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Newsid" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="News_comment.Title" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Title" class="form-control" style="width:30%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Title" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="News_comment.Userid" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Userid" class="form-control" style="width:30%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Userid" class="text-danger"></span>
                        </div>
    
                        <div class="form-group">
                            <label asp-for="News_comment.Nickname" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Nickname" class="form-control" style="width:30%;" />
                        </div>


                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Nickname" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="News_comment.Content" class="col-sm-2 control-label"></label>
                                                        
                            <textarea type="text" rows="5" asp-for="News_comment.Content" class="form-control" style="width:30%;">
                            </textarea>
                            
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Content" class="text-danger"></span>
                        </div>




                        <div class="form-group">
                            <label asp-for="News_comment.Parentid" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Parentid" class="form-control" style="width:30%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Parentid" class="text-danger"></span>
                        </div>



                        <div class="form-group">
                            <label asp-for="News_comment.Likecount" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Likecount" class="form-control" style="width:30%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Likecount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="News_comment.Hatecount" class="col-sm-2 control-label"></label>
                            <input asp-for="News_comment.Hatecount" class="form-control" style="width:30%;" />
                        </div>
                        <div class="row div-error">
                          <label class="col-sm-2 control-label">&nbsp;</label>
                          <span asp-validation-for="News_comment.Hatecount" class="text-danger"></span>
                        </div>
                           
 
                        <div class="form-group">
                            <label asp-for="News_comment.State" class="col-sm-2 control-label"></label>


                            <select asp-for="News_comment.State"
                                    class="form-control" style="width:10%;"
                                    asp-items="@(MyOrangeCMS_RazorVersion.Service.NewsService.GetNewsState())">
                            </select>
                        </div>

                        <div class="row div-error">
                            <label class="col-sm-2 control-label">&nbsp;</label>
                            <span asp-validation-for="News_comment.State" class="text-danger"></span>
                          </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input type="submit" value="保 存" class="btn btn-success" />
                                <input asp-for="News_comment.Id" type="hidden"  />
                                <input asp-for="News_comment.Createtime" type="hidden"  />
                       
                            </div>
                        </div>
















                    </div>
                </div>
            </div>
        </div>

    </form>



</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
